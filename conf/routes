# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Games
GET     /games                      controllers.Application.games()
GET     /games/owned                controllers.Application.ownedGames()
POST    /games                  	  controllers.Application.add()
PUT		  /games/:game				        controllers.Application.update(game: Long)

# Votes
GET     /votes                      controllers.Application.votes()
POST    /votes                      controllers.Application.addVote()

# Javascript routing
GET     /assets/javascripts/routes	controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)